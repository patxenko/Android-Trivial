<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_mueve_responde"
    tools:context="es.unavarra.tlm.dscr14.MueveResponde"
    android:background="#c3f388">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb1"
        android:checked="false"
        android:layout_below="@+id/space13"
        android:layout_alignLeft="@+id/cb4"
        android:layout_alignStart="@+id/cb4" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb2"
        android:checked="false"
        android:layout_below="@+id/cb1"
        android:layout_alignLeft="@+id/cb1"
        android:layout_alignStart="@+id/cb1" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb3"
        android:checked="false"
        android:layout_below="@+id/cb2"
        android:layout_alignLeft="@+id/cb2"
        android:layout_alignStart="@+id/cb2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb4"
        android:checked="false"
        android:layout_below="@+id/cb3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESPONDER"
        android:id="@+id/bot1"
        android:onClick="responde"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SELECCIONA LA OPCION CORRECTA"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_above="@+id/cb1"
        android:layout_centerHorizontal="true"
        android:id="@+id/space7" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_above="@+id/space7"
        android:layout_centerHorizontal="true"
        android:id="@+id/space8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv1"
        android:text="PREGUNTA"
        android:layout_below="@+id/space11"
        android:layout_centerHorizontal="true" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:id="@+id/space9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Antes de cerrar la aplicacion deberas responder si no quieres perder el turno"
        android:id="@+id/textView11"
        android:layout_below="@+id/space9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:id="@+id/space10" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_below="@+id/space10"
        android:layout_centerHorizontal="true"
        android:id="@+id/space11" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:id="@+id/space12" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_below="@+id/space12"
        android:layout_centerHorizontal="true"
        android:id="@+id/space13" />

</RelativeLayout>
